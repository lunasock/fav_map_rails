<div class="main">
  <div class="container">
    <div class="edit-post">
    <%= form_for @post do |f| %>
      <h4>口コミ</h4>
      <%= f.text_area :review_body, size: "8x8" %>
      <h4>場所の画像</h4>
      <%= f.attachment_field :review_image %>
      <%= f.submit '登録', class: "btn btn-primary" %><br><br>
      <%= link_to '削除', post_path(@post), method: :delete, "data-confirm" => "口コミを本当に削除しますか？", class: "btn btn-danger" %>
    <% end %>
    </div>
  </div>
</div>