<div class="main">
  <div class="container">
    <div class="row">
      <div class="spot-image col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <p><%= attachment_image_tag @spot, :spot_image, :fill, 400, 400, format: 'jpeg', fallback: "/images/no_image.jpg", size: '400x400' %></p>
      </div>
      <div class="spot-detail col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <p><%= @spot.spot_name %><br><%= @spot.category %><br><%= @spot.address %><br><%= @spot.spot_body %></p>
      </div>
    </div>    
  </div>
</div>